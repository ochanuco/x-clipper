{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2021", "DOM"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["chrome", "node"],
    "verbatimModuleSyntax": true
  },
  "files": ["src/types.d.ts"],
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
